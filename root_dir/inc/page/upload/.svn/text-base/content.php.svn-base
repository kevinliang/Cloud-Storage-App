<?php$hide=false;$user = getUser(login_id);$used = getUserQuota(login_id);$max = $user['quota'] - $used;$remain = formatSize($max);if(!empty($_POST['folder_id'])){    $folder = getFolder($_POST['folder_id']);    if(!$folder)	throwError("Invalid Folder");    if(!permission($folder['id'],"upload"))	throwError("Permission Denied");        $size = 0;    foreach($_FILES['upload']['name'] as $key => $name){		$name = $_FILES['upload']['name'][$key];		$name = getNewFile($name, $folder);		$path = $_FILES['upload']['tmp_name'][$key];		$size += getSize($path);		if($size > $max)			throwError("Disk space exceeded");		addFile($path, $folder['id'], $folder['root_id'], $name);    }    getFolderSize($folder['root_id']);    file_put_contents(TMP_PATH."/$_POST[APC_UPLOAD_PROGRESS].done","");    $hide=true;}if($hide)	echo "<div class='loading'>&nbsp;</div>";else{?><form enctype="multipart/form-data" id="upload_form"  method="POST">	<p>Remaining Disk Space: <b><?php echo $remain;?></b></p>    <p class='help'><b>Tip:</b> you can select multiple files.</p>    <input type="hidden" name="folder_id" value="<?php echo $_GET['folder_id'];?>" />    <input type="hidden" name="APC_UPLOAD_PROGRESS" value="<?php echo $_GET['id'];?>" />    <input type="file" id="input_file" value="" name="upload[]" multiple>    <br/>    <!-- <button class="button-upload" type="submit">Upload</button> --></form><?php	}